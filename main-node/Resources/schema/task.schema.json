{
    "$id": "http://brise.com/task.schema.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "DomainDescription": {
            "type": "object",
            "properties": {
                "FeatureNames": {
                    "type": "array",
                    "items": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "DataFile": {
                    "type": "string"
                },
                "AllConfigurations": {
                    "type": "string"
                },
                "DefaultConfiguration": {
                    "type": "array",
                    "items": [
                        {
                            "type": "number"
                        },
                        {
                            "type": "number"
                        }
                    ]
                }
            },
            "required": [
                "FeatureNames",
                "DataFile",
                "AllConfigurations",
                "DefaultConfiguration"
            ]
        },
        "SelectionAlgorithm": {
            "type": "object",
            "properties": {
                "SelectionType": {
                    "type": "string"
                },
                "NumberOfInitialConfigurations": {
                    "type": "integer",
                    "minimum": 0,
                    "exclusiveMinimum": true
                },
                "Step": {
                    "type": "integer",
                    "minimum": 0,
                    "exclusiveMinimum": true
                }
            },
            "required": [
                "SelectionType",
                "NumberOfInitialConfigurations",
                "Step"
            ]
        },
        "TaskConfiguration": {
            "type": "object",
            "properties": {
                "TaskName": {
                    "type": "string"
                },
                "WorkerConfiguration": {
                    "type": "object",
                    "properties": {
                        "ws_file": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "ws_file"
                    ]
                },
                "TaskParameters": {
                    "type": "array",
                    "items": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "ResultStructure": {
                    "type": "array",
                    "items": [{
                        "type": "string"
                    }]
                },
                "ResultDataTypes": {
                    "type": "array",
                    "items": [{
                        "type": "string"
                    }]
                },
                "RepeaterDecisionFunction": {
                    "type": "string"
                },
                "MaxTasksPerConfiguration": {
                    "type": "integer",
                    "minimum": 0
                },
                "MaxTimeToRunTask": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": [
                "TaskName",
                "WorkerConfiguration",
                "TaskParameters",
                "ResultStructure",
                "ResultDataTypes",
                "RepeaterDecisionFunction",
                "MaxTasksPerConfiguration",
                "MaxTimeToRunTask"
            ]
        },
        "ModelConfiguration": {
            "type": "object",
            "properties": {
                "ModelTestSize": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "exclusiveMaximum": true,
                    "exclusiveMinimum": true
                },
                "MinimumAccuracy": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1,
                    "exclusiveMaximum": true,
                    "exclusiveMinimum": true
                },
                "ModelType": {
                    "type": "string",
                    "enum": ["BO", "regression"]
                },
                "isMinimizationExperiment": {
                    "type": "boolean"
                },
                "FeaturesLabelsStructure": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "ModelTestSize",
                "MinimumAccuracy",
                "ModelType",
                "isMinimizationExperiment",
                "FeaturesLabelsStructure"
            ]
        },
        "StopCondition": {
            "anyOf": [{
                    "$ref": "./stop_condition/schema/adaptive.schema.json#"
                }, 
                {
                    "$ref": "./stop_condition/schema/default.schema.json#"
                },
                {
                    "$ref": "./stop_condition/schema/impr.schema.json#"
                }
            ]

        }
    },
    "required": [
        "DomainDescription",
        "SelectionAlgorithm",
        "TaskConfiguration",
        "ModelConfiguration",
        "StopCondition"
    ]
}