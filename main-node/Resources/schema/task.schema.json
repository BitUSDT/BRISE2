{
    "$id": "http://brise.com/task.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "DomainDescription": {
            "type": "object",
            "properties": {
                "FeatureNames": {
                    "type": "array",
                    "items": [{
                            "type": "string"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "DataFile": {
                    "type": "string"
                },
                "AllConfigurations": {
                    "type": "string"
                },
                "DefaultConfiguration": {
                    "anyOf": [
                        {
                            "type": "array",
                            "description": "Default configuration for multidimensional parameters",
                            "minItems": 3,
                            "items": [{
                                "type": ["number", "string"]
                            }]
                        },
                        {
                            "type": "array",
                            "description": "Default configuration with numbers for the energy consumption",
                            "minItems": 2,
                            "maxItems": 2,
                            "items": [{
                                "type": "number"
                            }]
                        }
                    ]
                }
            },
            "required": [
                "FeatureNames",
                "DataFile",
                "AllConfigurations",
                "DefaultConfiguration"
            ]
        },
        "SelectionAlgorithm": {
            "anyOf": [{
                "$ref": "./selection/schema/sel_algorithm.schema.json#/definitions/SobolSequence"
            }]
        },
        "TaskConfiguration": {
            "type": "object",
            "properties": {
                "TaskName": {
                    "type": "string"
                },
                "WorkerConfiguration": {
                    "type": "object",
                    "properties": {
                        "ws_file": {
                            "type": "string"
                        }
                    }
                },
                "TaskParameters": {
                    "type": "array",
                    "items": [{
                            "type": "string"
                        },
                        {
                            "type": "string"
                        }
                    ]
                },
                "ResultStructure": {
                    "type": "array",
                    "items": [{
                        "type": "string"
                    }]
                },
                "ResultDataTypes": {
                    "type": "array",
                    "items": [{
                        "type": "string"
                    }]
                },
                "RepeaterDecisionFunction": {
                    "type": "string"
                },
                "MaxTasksPerConfiguration": {
                    "type": "integer",
                    "minimum": 0
                },
                "MaxTimeToRunTask": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": [
                "TaskName",
                "WorkerConfiguration",
                "TaskParameters",
                "ResultStructure",
                "ResultDataTypes",
                "RepeaterDecisionFunction",
                "MaxTasksPerConfiguration",
                "MaxTimeToRunTask"
            ]
        },
        "ModelConfiguration": {
            "description": "Conditions for stopping an experiment.",
            "anyOf": [
                {
                    "$ref": "./model/schema/model.schema.json#/definitions/BayesianOptimization"
                },
                {
                    "$ref": "./model/schema/model.schema.json#/definitions/Regression"
                }
            ]
        },
        "StopCondition": {
            "description": "Configuration related to the prediction model creating process.",
            "anyOf": [{
                    "$ref": "./stop_condition/schema/adaptive.schema.json#"
                },
                {
                    "$ref": "./stop_condition/schema/default.schema.json#"
                },
                {
                    "$ref": "./stop_condition/schema/impr.schema.json#"
                }
            ]
        }
    },
    "required": [
        "DomainDescription",
        "SelectionAlgorithm",
        "TaskConfiguration",
        "ModelConfiguration",
        "StopCondition"
    ]
}