{
    "$id": "http://brise.com/experiment.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "General": {
            "type": "object",
            "properties": {
                "NumberOfWorkers": {
                    "type": "integer",
                    "minimum": 0
                },
                "EventService": {
                    "type": "object",
                    "properties": {
                        "Address": {
                            "type": "string"
                        },
                        "AMQTPort": {
                            "type": "integer",
                            "minimum": 49152,
                            "maximum": 65535
                        },
                        "GUIPort": {
                            "type": "integer",
                            "minimum": 49152,
                            "maximum": 65535
                        }
                    },
                    "additionalProperties": false,
                    "required":[
                        "Address",
                        "AMQTPort",
                        "GUIPort"
                    ]
                },
                "Database": {
                    "type": "object",
                    "properties": {
                        "Address": {
                            "type": "string"
                        },
                        "Port": {
                            "type": "integer",
                            "minimum": 0,
                            "maximum": 65535
                        },
                        "DatabaseName": {
                            "type": "string"
                        },
                        "DatabaseUser": {
                            "type": "string"
                        },
                        "DatabasePass": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false,
                    "required":[
                        "Address",
                        "Port",
                        "DatabaseName",
                        "DatabaseUser",
                        "DatabasePass"
                    ]
                },
                "COMMENT": {
                    "type": "string"
                },
                "results_storage": {
                    "type": "string"
                }
            },
            "additionalProperties": false,
            "required": [
                "NumberOfWorkers",
                "EventService",
                "Database",
                "results_storage"
            ]
        },
        "DomainDescription": {
            "type": "object",
            "properties": {
                "DataFile": {
                    "type": "string"
                },
                "DefaultConfigurationHandler": {
                    "type": "string"
                }
            },
            "required": [
                "DataFile"
            ]
        },
        "SelectionAlgorithm": {
            "anyOf": [{
                "$ref": "./selection/schema/sel_algorithm.schema.json#/definitions/SobolSequence"
            },
            {
                "$ref": "./selection/schema/sel_algorithm.schema.json#/definitions/ConfigSpaceSelector"
            }]
        },
        "TaskConfiguration": {
            "type": "object",
            "properties": {
                "TaskName": {
                    "type": "string"
                },
                "Scenario": {
                    "type": "object"
                },
                "Objectives": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "ObjectivesDataTypes": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "ObjectivesMinimization": {
                    "type": "array",
                    "items": {
                        "type": "boolean"
                    }
                },
                "ObjectivesPriorities": {
                    "type": "array",
                    "items": {
                        "type": "integer",
                        "minimum": 0
                    }
                },
                "ObjectivesPrioritiesModels": {
                    "type": "array",
                    "items": {
                        "type": "number",
                        "minimum": 0
                    }
                },
                "ExpectedValuesRange": {
                    "type": "array",
                    "items": {
                        "type": "array",
                        "items": {
                            "type":"number"
                        }
                    }
                },
                "MaxTimeToRunTask": {
                    "type": "number",
                    "minimum": 0,
                    "exclusiveMinimum": true
                }
            },
            "required": [
                "TaskName",
                "Scenario",
                "Objectives",
                "ObjectivesDataTypes",
                "ObjectivesMinimization",
                "ObjectivesPriorities",
                "ObjectivesPrioritiesModels",
                "ExpectedValuesRange"
            ]
        },
        "OutliersDetection":{
            "$ref": "./repeater/results_check/outliers_detection/schema/outlier_detector.schema.json#/definitions/OutliersDetection"
        },
        "Repeater": {
            "description": "Parameters related to Configuration evaluation accuracy.",
            "anyOf": [
                {
                    "$ref": "./repeater/schema/repeater.schema.json#/definitions/QuantityBased"
                },
                {
                    "$ref": "./repeater/schema/repeater.schema.json#/definitions/AcceptableErrorBased"
                }
            ]
        },
        "ModelConfiguration": {
            "description": "Configuration related to the prediction model creation process.",
            "anyOf": [
                {
                    "$ref": "./model/schema/model.schema.json#/definitions/BayesianOptimization"
                },
                {
                    "$ref": "./model/schema/model.schema.json#/definitions/Regression"
                }
            ]
        },
        "StopConditionTriggerLogic": {
            "type": "object",
            "properties": {
                "Expression": {
                    "type": "string"
                },
                "InspectionParameters":{
                    "type": "object",
                    "properties": {
                        "RepetitionPeriod": {
                            "type": "number",
                            "minimum": 0,
                            "exclusiveMinimum": true
                        },
                        "TimeUnit": {
                            "type": "string",
                            "enum": ["seconds","minutes","hours","days"]
                        }
                    }
                }
            },
            "required": [
                "Expression"
            ]
        },
        "StopCondition": {
            "$ref": "./stop_condition/schema/stop_condition.schema.json#/definitions/StopCondition"
        }
    },
    "required": [
        "General",
        "DomainDescription",
        "SelectionAlgorithm",
        "TaskConfiguration",
        "OutliersDetection",
        "Repeater",
        "ModelConfiguration",
        "StopCondition"
    ]
}
