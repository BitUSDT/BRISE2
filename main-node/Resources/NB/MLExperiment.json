{
  "General": {
    "isMinimizationExperiment"  : false,
    "ConfigurationsPerIteration" : 1
  },
  "DomainDescription":{
    "FeatureNames"      : ["laplace_correction", "estimation_mode", "bandwidth_selection", "bandwidth", "minimum_bandwidth", "number_of_kernels", "use_application_grid", "application_grid_size"],
    "DataFile"          : "./Resources/NB/MLExperimentData.json",
    "AllConfigurations"    : "# Will be loaded from DataFile and overwritten",
    "DefaultConfiguration": [true, "full", "heuristic", 0.5, 0.5, 4, true, 200]

  },
  "SelectionAlgorithm":{
    "SelectionType"     : "SobolSequence",
    "NumberOfInitialConfigurations"   : 10
  },
  "TaskConfiguration":{
    "TaskName"          : "taskNB",
    "Scenario":{
      "ws_file": "taskNB1.csv"
    },
    "TaskParameters"   : ["laplace_correction", "estimation_mode", "bandwidth_selection", "bandwidth", "minimum_bandwidth", "number_of_kernels", "use_application_grid", "application_grid_size"],
    "ResultStructure"   : ["PREC_AT_99_REC"],
    "ResultDataTypes"  : ["float"],
    "ExpectedValuesRange": [[0, 150000]],
    "MaxTimeToRunTask": 10
  },
  "OutliersDetection":[
    {
      "Type": "Dixon",
      "Parameters": {
        "MinActiveNumberOfTasks": 3,
        "MaxActiveNumberOfTasks": 30
      }
    },
    {
      "Type": "Chauvenet",
      "Parameters": {
        "MinActiveNumberOfTasks": 0,
        "MaxActiveNumberOfTasks": "Inf"
      }
    },
    {
      "Type": "MAD",
      "Parameters": {
        "MinActiveNumberOfTasks": 0,
        "MaxActiveNumberOfTasks": "Inf"
      }
    },
    {
      "Type": "Grubbs",
      "Parameters": {
        "MinActiveNumberOfTasks": 0,
        "MaxActiveNumberOfTasks": "Inf"
      }
    },
    {
      "Type": "Quartiles",
      "Parameters": {
        "MinActiveNumberOfTasks": 0,
        "MaxActiveNumberOfTasks": "Inf"
      }
    }
  ],
  "Repeater":{
    "Type": "default",
    "Parameters": {
      "MaxTasksPerConfiguration": 1,
      "MaxFailedTasksPerConfiguration": 1
    }
  },
  "ModelConfiguration":{
    "ModelType"         : "BO"
  },
  "StopCondition":[
    {
      "Type": "Default",
      "Parameters": {
        "MaxConfigs": 15
      }
    },
    {
      "Type": "ImprovementBased",
      "Parameters": {
        "MaxConfigsWithoutImprovement": 5
      }
    },
    {
      "Type": "Guaranteed",
      "Parameters": {      }
    },
    {
      "Type": "TimeBased",
      "Parameters": {
        "MaxRunTime": 1,
        "TimeUnit": "hours"
      }
    },
    {
      "Type": "BadConfigurationBased",
      "Parameters": {
        "MaxBadConfigurations": 10
      }
    }
  ]
}